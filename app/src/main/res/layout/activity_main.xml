<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity">

    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <Button
        style="@style/HomeStyleButtons"
        android:drawableStart="@drawable/pushkit_icon"
        android:id="@+id/btn_push_kit"
        android:layout_above="@+id/btn_location_kit"
        android:onClick="onPushKit"
        android:layout_width="match_parent"
        android:text="@string/push_kit"/>

    <Button
        android:drawableStart="@drawable/locationkit_icon"
        android:id="@+id/btn_location_kit"
        android:layout_above="@+id/btn_map_kit"
        android:onClick="onLocationKit"
        android:layout_width="match_parent"
        style="@style/HomeStyleButtons"
        android:text="@string/location_kit"/>

    <Button
        android:drawableStart="@drawable/mapkit_icon"
        android:id="@+id/btn_map_kit"
        android:layout_alignParentBottom="true"
        android:onClick="onMapKit"
        android:layout_width="match_parent"
        style="@style/HomeStyleButtons"
        android:text="@string/map_kit"/>

</RelativeLayout>